<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFE5E5E5"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:background="#FFF2FBEF"
            android:fontFamily="@font/aclonica"
            android:gravity="center"
            android:padding="16dp"
            android:text="Acerca De"
            android:textAlignment="center"
            android:textColor="#FF00897B"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/imageView3"
             />

        <TextView
            android:id="@+id/textNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="37dp"
            android:layout_weight="0"
            android:fontFamily="@font/aclonica"
            android:paddingBottom="8dp"
            android:text="Daniel Gómez García - 2023"
            android:textColor="#FF1E88E5"
            android:textSize="20sp"
            android:translationY="4dp"
            app:layout_constraintBottom_toTopOf="@+id/textCentro"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textCentro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="41dp"
            android:layout_marginBottom="37dp"
            android:layout_weight="0"
            android:fontFamily="@font/aclonica"
            android:paddingBottom="8dp"
            android:text="Centro de FP SOLVAM - 2DAW"
            android:textColor="#FF1E88E5"
            android:textSize="18sp"
            android:translationY="4dp"
            app:layout_constraintBottom_toTopOf="@+id/textAsignatura"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textAsignatura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="82dp"
            android:layout_weight="0"
            android:fontFamily="@font/aclonica"
            android:paddingBottom="8dp"
            android:text="Diseño de Interfaces Web"
            android:textColor="#FF1E88E5"
            android:textSize="18sp"
            android:translationY="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="57dp"
            android:layout_height="35dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="34dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView4"
            app:layout_constraintEnd_toStartOf="@+id/textNombre"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/baseline_person_24" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="57dp"
            android:layout_height="35dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="34dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView5"
            app:layout_constraintEnd_toStartOf="@+id/textCentro"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/solvam" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="57dp"
            android:layout_height="35dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textAsignatura"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/baseline_menu_book_24" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>